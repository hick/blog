<% provide(:title, '日志列表') %>

<h1>最新日志列表</h1>
 

 
<ul>
  <% @posts.each do |post| %>
    <li><%= link_to post.title, "#{root_path}#{post.title}" %></li>
  <% end %>
</ul>



<h1>最新日志</h1>


<p>标题: <%= @first_title %></p>
<p>时间: <%= raw(@first_time.localtime.to_s(:db)) %></p>
<%= raw(@first_text) %>